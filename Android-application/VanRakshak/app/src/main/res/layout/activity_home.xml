<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clover">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:titleTextColor="#d1f5d3"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_marginTop="20dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#d1f5d3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvMap"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/island_map"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:text="Map"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#d1f5d3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvPrediction"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/retail"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:text="Prediction"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:backgroundTint="#d1f5d3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvTask"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/task"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:text="Task"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#d1f5d3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvAlert"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/alert"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:text="Alert"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:backgroundTint="#d1f5d3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvObservation"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

<!--                    <ImageView-->
<!--                        android:layout_width="115dp"-->
<!--                        android:layout_height="115dp"-->
<!--                        android:background="@drawable/maps_and_location"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:text="Observations"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#d1f5d3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/cvAnimal"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/pet"
                        android:layout_gravity="center|bottom"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#184d47"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="Animal Detection"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:backgroundTint="#d1f5d3">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/cvSosResolve"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/sos_resolve"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#184d47"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginTop="10dp"
                    android:text="SOS Resolve"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    </LinearLayout>
</ScrollView>

